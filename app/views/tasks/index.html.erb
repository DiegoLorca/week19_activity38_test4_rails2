<div class="container">
  <div class="row">
    <% @tasks.each_slice(3) do |row| %>
    <% row.each do |task| %>
    <div class="col">
      <div class="card">
          <a href="<%= task_path(task) %>"> <%= image_tag task.image, size: '200x200', class: 'card-img-top' %> </a>
          <div class="body">
            <h4><%= task.title %></h4>
            <p> Last updated <%= time_ago_in_words task.created_at %> </p>
            <% if donetask(task).nil? || donetask(task).completed == false %>
              <%= link_to 'No listo', done_task_path(task), class: 'btn btn-danger', method: :post %>
            <% else %>
            <%= link_to 'Listo', done_task_path(task), class: 'btn btn-primary', method: :post %>
            <% end %>
          </div>

    </div>
  </div>
  <% end %>
    <div class="w-100" style="margin-top: 20px">

    </div>
    <% end %>
  </div>
</div>
